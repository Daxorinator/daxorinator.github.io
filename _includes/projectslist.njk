<ul reversed class="postlist">
{% for project in projectslist %}
	<li class="projectlist-item{% if project.url == url %} postlist-item-active{% endif %}">
		
		<h4 style="grid-area: 1 / 1 / 2 / 5; text-align: left; margin: 0 0 0 0;">
			<a href="{{ project.url }}" class="postlist-link">
				{% if project.data.title %}
					{{ project.data.title }}
				{% else %}
					<code>{{ project.url }}</code>
				{% endif %}
			</a>
		</h4>
		
		{% if project.data.github %}
		<a style="grid-area: 1 / 5 / 3 / 6;" href="{{ project.data.github }}" target="_blank">
			<i class="nes-icon github is-large"></i>
		</a>
		{% endif %}
		
		<p style="grid-area: 2 / 1 / 3 / 5; text-align: left;">
			{{ project.data.description }}
		</p>
		{# <time class="postlist-date" datetime="{{ project.date | htmlDateString }}">{{ project.date | readableDate("LLLL yyyy") }}</time> #}
	</li>
{% endfor %}
</ul>
